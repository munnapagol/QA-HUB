<div class="home row">
    <div class="container-fluid">
        <div class="row" style="margin-top: 80px">
            <div class="col-md-3 ml-auto">
                <div class="card custom-card">
                    <div class="card-header">
                        <h3 class="">Register</h3>
                    </div>
                    <div class="card-body">
                        <form action="/auth/register" method="POST">
                            <% include ./partials/messages %>
                            <!-- <div class="form-group">
                                        <label for="exampleInputEmail1">Username</label>
                                        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                                            value="{{name}}" />
                                    </div> -->
                            <div class="form-group">
                                <label for="exampleInputEmail1">Name</label>
                                <input type="name" id="" name="name" name="name" class="form-control" placeholder="Name"
                                    value="<%= typeof name != 'undefined' ? name : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" id="" name="email" class="form-control" placeholder="Email"
                                    value="<%= typeof email != 'undefined' ? email : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" id="password" name="password" class="form-control"
                                    placeholder="password"
                                    value="<%= typeof password != 'undefined' ? password : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Confirm Password</label>
                                <input type="password" id="" name="rePassword" class="form-control"
                                    placeholder="re-password"
                                    value="<%= typeof rePassword != 'undefined' ? rePassword : '' %>">
                            </div>
                            <button type="submit" class="btn btn-success formButton">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>